<UserControl x:Class="MusicDiary.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicDiary.Views"
             mc:Ignorable="d" 
             Background="#88CFC3" >

    <Grid RenderTransformOrigin="0.274,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="MainMenu" Background="#88CFC3" Grid.Column="0" >
            <Border Margin="5" Background="White" CornerRadius="15"  >
                <Border.Effect>
                    <DropShadowEffect BlurRadius="40" Color="LightGray" ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Hi, user!" FontSize="30" FontWeight="Bold" Margin="20 30 5 15" Height="44" />
                    <Button Content="Liked Tracks" FontSize="17"  Margin="5 10 5 0" HorizontalContentAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}"  />
                    <Button Content="Artists" FontSize="17"  Margin="5 10 5 0" HorizontalContentAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="Albums" FontSize="17"  Margin="5 10 5 0" HorizontalContentAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="My Playlists" FontSize="17"  Margin="5 10 5 0" HorizontalContentAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}"/>
                    <Button Content="Generate a Playlist" FontSize="17"  Margin="5 10 5 0" HorizontalContentAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}"/>
                </StackPanel>
            </Border>

        </Grid>
        <Grid Grid.Column="1">
            <Frame Name="AppInterfaceFrame" Background="#88CFC3" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</UserControl>
